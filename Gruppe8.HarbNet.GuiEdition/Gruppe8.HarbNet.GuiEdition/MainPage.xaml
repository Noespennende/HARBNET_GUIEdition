<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gruppe8.HarbNet.GuiEdition.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <!--Venstre side layout-->
            <Image
                Source="harbnet.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="" />

            <Label
                Text="HarbNet"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                Text="Go to Next Page"
                Clicked="OnNextPageClicked"
                HorizontalOptions="Fill" /> 
   
            <Entry
                x:Name="SimulationParametersEntry"
                Placeholder="Enter Parameter here"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center" />
            <Button
                x:Name="SimulationClick"
                Text="Run simulation" 
                SemanticProperties.Hint="The simulation will now run"
                Clicked="OnSimulationClicked"
                HorizontalOptions="Fill" />
            <!--Høyre side-->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
